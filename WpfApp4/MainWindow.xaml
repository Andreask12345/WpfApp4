<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pizza Bestilling" Height="350" Width="500">
    <Grid>
        <ListBox Name="PizzaListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="200" Margin="10">
            <ListBoxItem Content="Margeritta" Tag="8.99"/>
            <ListBoxItem Content="Pepperoni" Tag="9.99"/>
            <ListBoxItem Content="Hawai" Tag="10.99"/>
        </ListBox>
        <Button Content="Tilføj til kurv" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="230,10,0,0" Click="AddToCart_Click"/>
        <ListBox Name="CartListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="200" Margin="230,50,0,0"/>
        <Button Content="Køb" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="230,260,0,0" Click="Buy_Click"/>
        <TextBlock Name="TotalPriceTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="340,265,0,0"/>
    </Grid>
</Window>
