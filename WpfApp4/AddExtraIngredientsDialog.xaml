<Window x:Class="WpfApp4.ToppingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Toppings Selection" Height="200" Width="300">
    <Grid>
        <CheckBox Name="ExtraCheeseCheckBox" Content="Extra Cheese" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <CheckBox Name="ExtraBaconCheckBox" Content="Extra Bacon" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0"/>
        <Button Content="OK" Name="OkButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="10,70,0,0" Click="OkButton_Click"/>
    </Grid>
</Window>
